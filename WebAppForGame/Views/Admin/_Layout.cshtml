<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
   
  

    <link href="~/css/devextreme/dx.darkviolet.css" rel="stylesheet" />
    <script src="~/js/devextreme/jquery.js"></script>
    <script src="~/js/devextreme/bootstrap.js"></script>

    <script src="~/js/devextreme/dx.all.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.mvc.js"></script>
    <script src="~/js/devextreme/aspnet/dx.aspnet.data.js"></script>
    <script src="~/js/devextreme/localization/dx.messages.ru.js"></script>

    <link href="~/css/devextreme/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css//style.css">
    <title>SpeedBox - Панель администратора</title>

</head>
<script>
    DevExpress.localization.locale("ru");
</script>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <a href="#" class="logo">
            <i class='bx bx-code-alt'></i>
            <div class="logo-name"><span>Speed</span>Box</div>
        </a>
        <ul class="side-menu">
            <li class="@(ViewBag.currentLayer == 0 ? "active" : "")"><a href="/Admin"><i class='bx bxs-dashboard'></i>Панель мониторинга</a></li>
            <li class="@(ViewBag.currentLayer == 1 ? "active" : "")"><a href="/Admin/Products"><i class='bx bx-store-alt'></i>Товары</a></li>
            <li class="@(ViewBag.currentLayer == 2 ? "active" : "")"><a href="/Admin/Payments"><i class='bx bx-ruble'></i>Заказы</a></li>
            <li class="@(ViewBag.currentLayer == 3 ? "active" : "")"><a href="/Admin/Logs"><i class='bx bx-message-square-dots'></i>Логи игроков</a></li>
            <li class="@(ViewBag.currentLayer == 4 ? "active" : "")"><a href="/Admin/Users"><i class='bx bx-group'></i>Пользователи</a></li>
            <li class="@(ViewBag.currentLayer == 5 ? "active" : "")"><a href="/Admin/Settings"><i class='bx bx-cog'></i>Настройки</a></li>
        </ul>
        <ul class="side-menu">
            <li>
                <a href="/Home" class="logout">
                    <i class='bx bx-log-out-circle'></i>
                    Выйти из системы
                </a>
            </li>
        </ul>
    </div>
    <div class="content">
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Поиск...">
                    <button class="search-btn" type="submit"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="theme-toggle" checked hidden>
            <label for="theme-toggle" class="theme-toggle"></label>

            <a href="#" class="profile">
                <img src="~/img/logo.jpg">
            </a>
        </nav>
    @RenderBody()
        <script src="~/js/index.js"></script>
    </div>
</body>

</html>