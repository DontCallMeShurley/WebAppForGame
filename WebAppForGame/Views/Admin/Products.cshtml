
@{
    Layout = "_Layout";
}

@(Html.DevExtreme().DataGrid<WebAppForGame.Data.Products>()
    .DataSource(ds => ds.Mvc()
        .Controller("Products")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.AddFor(m => m.Amount);

        columns.AddFor(m => m.Name);

        columns.AddFor(m => m.Coins);
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)

<script src="~/js/index.js"></script>