
@{
    Layout = "_Layout";
}

<H2>Products</H2>


@(Html.DevExtreme().DataGrid<WebAppForGame.Data.Products>()
    .ID("gridContainer")
    .DataSource(ds => ds.Mvc()
        .Controller("Products")
        .LoadAction("Get")
        .InsertAction("Post")
        .UpdateAction("Put")
        .DeleteAction("Delete")
        .Key("Id")
    )
    .Paging(p => p.PageSize(10))
    .Pager(p => p
        .ShowPageSizeSelector(true)
        .AllowedPageSizes(new[] { 10, 25, 50, 100 })
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.Add()
            .DataField("Amount")
            .DataType(GridColumnDataType.Number)
            // .Format(Format.Currency)
            .Caption("Сумма");

        columns.Add()
            .DataField("Name")
            .Caption("Название");

        columns.Add()
            .DataField("Coins")
            .DataType(GridColumnDataType.Number)
            //.Format(Format.Currency)
            .Caption("Монеты");
    })
    .Editing(e => e
        .AllowAdding(true)
        .AllowUpdating(true)
        .AllowDeleting(true)
    )
)

<script src="~/js/index.js"></script>