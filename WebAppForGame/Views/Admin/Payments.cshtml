@page

@{
    Layout = "_Layout";
}

<H2>Payments</H2>

@(Html.DevExtreme().DataGrid<WebAppForGame.Data.Payments>()
    .DataSource(ds => ds.Mvc()
        .Controller("Payments")
        .LoadAction("Get")
        .Key("Id")
    )
    .RemoteOperations(true)
    .Columns(columns => {

        columns.AddFor(m => m.Id);

        columns.Add()
            .DataField("UserID")
            .Caption("Id Пользователя");

        columns.Add()
            .DataField("PaymentId")
            .Caption("Id Платежа");

        columns.Add()
            .DataField("PaymentStatus")
            .Caption("Статус платежа");

        columns.Add()
            .DataField("Date")
            .Caption("Дата")
            .DataType(GridColumnDataType.Date);
    })
)

<script src="~/js/index.js"></script>